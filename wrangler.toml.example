name = "inspiration-collector"
compatibility_date = "2024-01-01"
compatibility_flags = ["nodejs_compat"]

# Pages配置
[env.production]
name = "inspiration-collector"

# D1 数据库绑定 (需要创建后填入实际ID)
# 步骤：
# 1. 运行: npx wrangler d1 create illuminateur-db
# 2. 复制返回的database_id到下面的配置中
# 3. 取消注释以下配置
# [[d1_databases]]
# binding = "DB"
# database_name = "illuminateur-db"
# database_id = "your_actual_database_id_here"

# KV 存储绑定 (需要创建后填入实际ID)
# 步骤：
# 1. 运行: npx wrangler kv:namespace create "CACHE"
# 2. 运行: npx wrangler kv:namespace create "CACHE" --preview
# 3. 复制返回的ID到下面的配置中
# 4. 取消注释以下配置
# [[kv_namespaces]]
# binding = "CACHE"
# id = "your_actual_kv_namespace_id_here"
# preview_id = "your_actual_kv_preview_id_here"

# 环境变量 (敏感信息请在Cloudflare Dashboard中设置)
[vars]
GEMINI_API_KEY = "" # 请在Cloudflare Pages项目设置中配置
ENVIRONMENT = "development"

# Workers配置
[build]
command = "npm run build"

# 本地开发配置
[dev]
port = 3000
local_protocol = "http"
local = true

# 注意：
# 1. 此文件包含敏感信息，不应提交到Git
# 2. 请复制此文件为 wrangler.toml 并填入实际的ID
# 3. wrangler.toml 已在 .gitignore 中被忽略