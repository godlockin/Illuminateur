# 灵感收集器 - 环境变量配置示例
# 复制此文件为 .env 并填入实际值

# ===========================================
# Cloudflare 配置
# ===========================================

# Cloudflare Account ID
CLOUDFLARE_ACCOUNT_ID=your_account_id_here

# Cloudflare API Token (用于部署)
CLOUDFLARE_API_TOKEN=your_api_token_here

# ===========================================
# 数据库配置
# ===========================================

# D1 数据库 ID (创建数据库后获得)
D1_DATABASE_ID=your_d1_database_id_here

# D1 数据库名称
D1_DATABASE_NAME=inspiration-db

# ===========================================
# KV 存储配置
# ===========================================

# KV 命名空间 ID (生产环境)
KV_NAMESPACE_ID=your_kv_namespace_id_here

# KV 命名空间 ID (预览环境)
KV_NAMESPACE_PREVIEW_ID=your_kv_preview_id_here

# ===========================================
# AI 服务配置
# ===========================================

# Google Gemini API Key
# 获取地址: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Gemini 模型配置
GEMINI_MODEL=gemini-pro
GEMINI_MAX_TOKENS=1000
GEMINI_TEMPERATURE=0.7

# ===========================================
# 应用配置
# ===========================================

# 应用环境 (development/staging/production)
ENVIRONMENT=development

# 应用名称
APP_NAME=inspiration-collector

# 应用版本
APP_VERSION=0.1.0

# 域名配置 (生产环境)
DOMAIN=your-domain.com

# ===========================================
# 功能开关
# ===========================================

# 启用AI分析
ENABLE_AI_ANALYSIS=true

# 启用深度分析
ENABLE_DEEP_ANALYSIS=true

# 启用自动标签
ENABLE_AUTO_TAGGING=true

# 启用情感分析
ENABLE_SENTIMENT_ANALYSIS=true

# ===========================================
# 限制配置
# ===========================================

# 内容最大长度 (字符)
MAX_CONTENT_LENGTH=5000

# 每日提交限制
DAILY_SUBMISSION_LIMIT=100

# API 请求超时 (毫秒)
API_TIMEOUT=30000

# ===========================================
# 缓存配置
# ===========================================

# 缓存过期时间 (秒)
CACHE_TTL=3600

# 启用缓存
ENABLE_CACHE=true

# ===========================================
# 日志配置
# ===========================================

# 日志级别 (debug/info/warn/error)
LOG_LEVEL=info

# 启用详细日志
ENABLE_VERBOSE_LOGGING=false

# ===========================================
# 安全配置
# ===========================================

# CORS 允许的域名 (用逗号分隔)
CORS_ALLOWED_ORIGINS=*

# 启用 HTTPS 重定向
ENFORCE_HTTPS=true

# ===========================================
# 开发配置
# ===========================================

# 开发服务器端口
DEV_PORT=3000

# 启用热重载
ENABLE_HOT_RELOAD=true

# 启用调试模式
DEBUG_MODE=false

# ===========================================
# 第三方服务配置
# ===========================================

# 邮件服务配置 (可选)
EMAIL_SERVICE_API_KEY=your_email_api_key_here
EMAIL_FROM_ADDRESS=noreply@your-domain.com

# 分析服务配置 (可选)
ANALYTICS_ID=your_analytics_id_here

# 错误监控配置 (可选)
ERROR_TRACKING_DSN=your_error_tracking_dsn_here

# ===========================================
# 备份配置
# ===========================================

# 启用自动备份
ENABLE_AUTO_BACKUP=false

# 备份频率 (小时)
BACKUP_FREQUENCY=24

# 备份保留天数
BACKUP_RETENTION_DAYS=30